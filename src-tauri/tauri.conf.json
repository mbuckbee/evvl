{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Evvl",
  "version": "0.1.2",
  "identifier": "com.evvl.app",
  "build": {
    "frontendDist": "../out",
    "devUrl": "http://localhost:3333",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build:tauri"
  },
  "app": {
    "windows": [
      {
        "title": "Evvl",
        "width": 1400,
        "height": 900,
        "minWidth": 1000,
        "minHeight": 700,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
